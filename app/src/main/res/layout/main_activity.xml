<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main content -->
    <FrameLayout
        android:id="@+id/main_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <!-- Your existing layout -->
        <include layout="@layout/main_activity_content" />
        
    </FrameLayout>

    <!-- Navigation Drawer with Preferences Container -->
    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#1E1E1E">
        
        <!-- Drawer Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#3C00B3">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X11 Settings"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termux X11 Configuration"
                android:textSize="12sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
        
        <!-- Navigation Menu -->
        <LinearLayout
            android:id="@+id/nav_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            
            <Button
                android:id="@+id/nav_prefs_button"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:padding="12dp"
                android:drawableLeft="@android:drawable/ic_menu_preferences"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical" />
                
            <Button
                android:id="@+id/nav_help_button"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:padding="12dp"
                android:drawableLeft="@android:drawable/ic_menu_help"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical" />
                
            <Button
                android:id="@+id/nav_exit_button"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:padding="12dp"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:drawablePadding="8dp"
                android:gravity="left|center_vertical" />
        </LinearLayout>
        
        <!-- Preferences Container -->
        <FrameLayout
            android:id="@+id/preferences_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" />
            
    </LinearLayout>
    
</androidx.drawerlayout.widget.DrawerLayout>